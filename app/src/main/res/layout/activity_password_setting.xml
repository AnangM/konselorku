<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/general_bg"
    tools:context=".settings.PasswordSetting">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/set_passwd_title"
        android:background="#fff"
        android:elevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Ganti Password"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/set_passwd_old_ph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/set_passwd_title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="Password lama"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:id="@+id/set_passwd_old"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Password lama"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/set_passwd_old_ph"
        />
    <TextView
        android:id="@+id/set_passwd_new_ph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/set_passwd_old"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="Password baru"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:id="@+id/set_passwd_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Password baru"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/set_passwd_new_ph"
        />
    <EditText
        android:id="@+id/set_passwd_new_conf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Konfirmasi password baru"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/set_passwd_new"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/set_passwd_new_conf"
        android:background="@drawable/general_block"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="#fff"
        android:textSize="18sp"
        android:text="Ubah Password"
        android:layout_margin="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>