<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="10dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="1dp">

    <TextView
        android:id="@+id/laporan_siswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/darkText"
        android:text="Nama Siswa"
        android:fontFamily="@font/avenir_demi"
        />
    <View
        android:id="@+id/laporan_top_divider"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/laporan_siswa"
        android:background="@android:color/darker_gray"/>
    <ImageView
        android:id="@+id/laporan_img"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/laporan_top_divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        app:layout_goneMarginTop="5dp"
        android:id="@+id/laporan_waktu"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="18.45pm"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/laporan_about"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/laporan_sekolah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:textSize="18sp"
        android:text="SMK Negeri 2 Yogyakarta"
        app:layout_constraintTop_toBottomOf="@id/laporan_img"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/laporan_about"
        app:layout_goneMarginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/laporan_sekolah"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@color/darkText"
        android:text="ABOUT"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>