<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/general_bg"
    tools:context=".settings.BioSetting">
    <androidx.appcompat.widget.Toolbar
        android:background="#fff"
        android:id="@+id/set_bio_toolbar"
        android:elevation="3dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Pengaturan Bio dan Riwayat Pendidkan"
        />

    <TextView
        android:id="@+id/set_bio_title_ph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/set_bio_toolbar"
        android:layout_margin="20dp"
        android:text="Title"
        android:textColor="@color/darkText"
        android:textSize="18sp"
        />
    <EditText
        android:padding="5dp"
        android:id="@+id/set_bio_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:background="@drawable/general_block"
        android:backgroundTint="#fff"
        android:hint="eg: Psikolog, Guru BK, etc"
        app:layout_constraintTop_toBottomOf="@id/set_bio_title_ph"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:id="@+id/set_bio_bio_ph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/set_bio_title"
        android:layout_margin="20dp"
        android:text="Bio"
        android:textColor="@color/darkText"
        android:textSize="18sp"
        />
    <EditText
        android:id="@+id/set_bio_bio"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="18sp"
        android:background="@drawable/general_block"
        android:backgroundTint="#fff"
        android:padding="5dp"
        android:inputType="textMultiLine|text"
        android:gravity="top"
        android:hint="Jelaskan diri anda secara singkat!"
        app:layout_constraintTop_toBottomOf="@id/set_bio_bio_ph"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/set_bio_edu_ph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/set_bio_bio"
        android:layout_margin="20dp"
        android:text="Riwayat Pendidikan"
        android:textColor="@color/darkText"
        android:textSize="18sp"
        />

    <EditText
        android:padding="5dp"
        android:id="@+id/set_bio_edu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:background="@drawable/general_block"
        android:backgroundTint="#fff"
        android:hint="eg: S1 - Psikologi UGM"
        app:layout_constraintTop_toBottomOf="@id/set_bio_edu_ph"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <Button
        android:id="@+id/set_bio_edu_add"
        app:layout_constraintTop_toBottomOf="@id/set_bio_edu"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="Tambah"
        android:textColor="#fff"
        android:background="@drawable/general_block"
        android:backgroundTint="#57b34f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/set_bio_rv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/set_bio_edu_add"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/set_bio_save"
        app:layout_constraintTop_toBottomOf="@id/set_bio_rv"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Simpan"
        android:textColor="#fff"
        android:background="@drawable/general_block"
        android:backgroundTint="@color/colorPrimary"

        />
</androidx.constraintlayout.widget.ConstraintLayout>