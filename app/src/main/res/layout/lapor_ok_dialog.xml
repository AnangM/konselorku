<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/lapor_confirm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terimakasih"
        android:textSize="28sp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/avenir_demi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:id="@+id/lapor_confirm_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_lapor_success"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/lapor_confirm_title"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:text="Anda telah melaporkan tindakan bullying. Laporan ini akan disampaikan kepada Guru BK Sekolah anda"
        app:layout_constraintTop_toBottomOf="@id/lapor_confirm_ic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>