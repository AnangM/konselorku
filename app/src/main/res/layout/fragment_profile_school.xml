<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.profil.ProfileSchool"
    android:paddingTop="10dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/darkText"
        android:fontFamily="@font/avenir_demi"
        android:text="Sekolah"
        />
    <TextView
        android:id="@+id/sch_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/darkText"
        android:text="Tanggal Lahir"

        />

    <TextView
        android:id="@+id/sch_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/darkText"
        android:text="Tanggal Lahir"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/darkText"
        android:fontFamily="@font/avenir_demi"
        android:text="Kelas"
        />
    <TextView
        android:id="@+id/sch_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/darkText"
        android:text="Tanggal Lahir"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/darkText"
        android:fontFamily="@font/avenir_demi"
        android:text="Wali Kelas"
        />
    <TextView
        android:id="@+id/sch_room_tch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/darkText"
        android:text="~"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/darkText"
        android:fontFamily="@font/avenir_demi"
        android:text="Guru BK"
        />
    <TextView
        android:id="@+id/sch_kons_tch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/darkText"
        android:text="~"
        android:layout_marginBottom="20dp"
        />



</LinearLayout>